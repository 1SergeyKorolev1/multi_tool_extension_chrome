{
  "name": "Multi-tool",
  "description": "Browser extension with many features.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./dist/main.js"],
      "css": ["./popup/style.css"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {}
}
